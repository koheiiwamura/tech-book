<div class="page-title detail-page-title" style="background-image:url('/assets/books_on_desk2.jpg');">
  <div class="container">
    <div class="flex-row">
      <div class="flex-column flex-md-8 flex-sm-12">
      </div>
      <div class="flex-column flex-md-4 flex-align-bottom flex-sm-12 mt-20-sm">
        <div class="text-right text-left-sm">
            <%= link_to "トップページへ", root_path, class:"anchor btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="bg-light new-books">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <div class="section-title">
          <h3><%= current_user.username %>さんの出品書一覧</h3>
          <p>出品された技術書の一覧です。</p>
        </div>
      </div>
    </div>
    <div class="GridLex-gap-30-wrappper package-grid-item-wrapper">
      <div class="GridLex-grid-noGutter-equalHeight">
        <% @books.each do |book| %>
          <%= render partial:"books/book", locals:{book: book} %>
        <% end %>
      </div>
    </div>
  </div>
</section>
